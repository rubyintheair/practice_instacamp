
<div style="width:400px">
  <%= form_for photo do |f| %>
    <div class="form-group">
      <%= f.text_field :username, placeholder: "User name", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_field :url, placeholder: "URL", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_area :caption, placeholder: "Caption", class: "form-control" %>
    </div>
    <%= f.submit "Submit", class: "btn btn-danger" %>
  <% end %>
</div>